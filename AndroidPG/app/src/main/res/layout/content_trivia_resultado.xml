<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aguitech.compartetuexperiencia.TriviaResultadoActivity"
    tools:showIn="@layout/activity_trivia_resultado">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:id="@+id/imageView15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/resultadopleca" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView16"
        android:layout_below="@+id/imageView15"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/resultadotexto" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/imageView16"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/resultadocontenidofondo">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/triviaResultadoEvento"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="28dp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/triviaResultadoPartipacion"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_alignTop="@+id/triviaResultadoEvento"
            android:layout_toRightOf="@+id/triviaResultadoEvento"
            android:layout_toEndOf="@+id/triviaResultadoEvento"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/triviaResultadoEventoFecha"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/triviaResultadoEvento"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="60 segundos"
            android:id="@+id/triviaResultadoTiempo"
            android:layout_below="@+id/triviaResultadoEventoFecha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000"
            android:id="@+id/triviaResultadoCorrectas"
            android:textAlignment="gravity"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/triviaResultadoTiempo"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/triviaResultadoTerminar"
            android:background="@mipmap/resultadoterminar"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/triviaResultadoCorrectas"
            android:layout_toEndOf="@+id/triviaResultadoCorrectas"
            android:layout_marginLeft="40dp" />

    </RelativeLayout>


</RelativeLayout>
