<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.aguitech.compartetuexperiencia.BlogActivity"
    tools:showIn="@layout/activity_blog">
    <ListView
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:id="@+id/list_blog"
        />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:id="@+id/btnBlogTrivias"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_blog"
        android:layout_toEndOf="@+id/list_blog"
        android:background="@mipmap/preguntahoy"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:id="@+id/btnBlogCalendario"
        android:layout_below="@+id/btnBlogTrivias"
        android:layout_alignLeft="@+id/btnBlogTrivias"
        android:layout_alignStart="@+id/btnBlogTrivias"
        android:background="@mipmap/calendario" />
</RelativeLayout>
